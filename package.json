{
  "name": "quiz-app-monorepo",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.3.8",
  "workspaces": ["apps/*"],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "tsc": "turbo run tsc",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "format:check": "turbo run format:check",
    "stylelint": "turbo run stylelint",
    "test": "turbo run test",
    "db:generate": "turbo run db:generate --filter=web",
    "db:push": "turbo run db:push --filter=web",
    "db:migrate": "turbo run db:migrate --filter=web",
    "db:studio": "turbo run db:studio --filter=web"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "turbo": "^2.8.1",
    "typescript": "~5.9.3"
  },
  "engines": {
    "bun": ">=1.3.8"
  }
}
