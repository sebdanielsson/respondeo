{
  "name": "respondeo-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:only": "turbo run build:only",
    "start": "turbo run start",
    "tsc": "turbo run tsc",
    "lint": "turbo run lint",
    "format": "bun run oxfmt",
    "format:check": "bun run oxfmt --check",
    "stylelint": "turbo run stylelint",
    "test": "turbo run test",
    "db:generate": "turbo run db:generate --filter=web",
    "db:push": "turbo run db:push --filter=web",
    "db:migrate": "turbo run db:migrate --filter=web",
    "db:studio": "turbo run db:studio --filter=web"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "oxfmt": "^0.28.0",
    "turbo": "^2.8.3",
    "typescript": "~5.9.3"
  },
  "engines": {
    "bun": ">=1.3.8"
  },
  "packageManager": "bun@1.3.8"
}
