{
  "name": "create-respondeo-app",
  "version": "0.1.0",
  "description": "Create a new Respondeo quiz application",
  "keywords": [
    "bun",
    "cli",
    "quiz",
    "respondeo",
    "scaffolding"
  ],
  "homepage": "https://docs.respondeo.app",
  "license": "MIT",
  "author": "Sebastian Danielsson",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebdanielsson/respondeo.git",
    "directory": "packages/create-respondeo-app"
  },
  "bin": {
    "create-respondeo-app": "dist/index.js"
  },
  "files": [
    "dist",
    "src"
  ],
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outfile=dist/index.js --target=bun --external=giget --external=@clack/prompts",
    "dev": "bun run src/index.ts",
    "tsc": "tsc --noEmit",
    "lint": "oxlint"
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "giget": "^3.1.2"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8",
    "oxlint": "^1.43.0"
  },
  "engines": {
    "bun": ">=1.3.9"
  }
}
