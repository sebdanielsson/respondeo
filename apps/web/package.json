{
  "name": "web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run --bun next dev --turbopack",
    "build": "bun run --bun --no-env-file db:migrate && bun run --bun --no-env-file next build",
    "build:only": "bun run --bun --no-env-file next build",
    "start": "bun run --bun next start",
    "tsc": "tsc --noEmit",
    "lint": "bun run --bun --no-env-file oxlint && bun run --bun --no-env-file eslint",
    "format": "bun run oxfmt",
    "format:check": "bun run oxfmt --check",
    "stylelint": "stylelint --allow-empty-input \"./**/*.css\"",
    "db:generate": "bun run --bun drizzle-kit generate",
    "db:push": "bun run --bun drizzle-kit push",
    "db:migrate": "bun run --bun ./lib/db/migrate.ts",
    "db:studio": "bun run --bun drizzle-kit studio",
    "test": "bun test"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.35",
    "@ai-sdk/google": "^3.0.20",
    "@ai-sdk/openai": "^3.0.25",
    "@base-ui/react": "^1.1.0",
    "@scalar/nextjs-api-reference": "^0.9.17",
    "@vercel/analytics": "^1.6.1",
    "ai": "^6.0.67",
    "better-auth": "^1.4.18",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.45.1",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "react": "19.2.4",
    "react-day-picker": "^9.13.0",
    "react-dom": "19.2.4",
    "shadcn": "^3.8.1",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@dreamsicle.io/stylelint-config-tailwindcss": "^1.2.2",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/bun": "^1.3.8",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.8",
    "eslint": "^9.39.2",
    "eslint-config-next": "16.1.6",
    "eslint-config-turbo": "^2.8.3",
    "eslint-plugin-oxlint": "^1.43.0",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.43.0",
    "stylelint": "^17.1.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^40.0.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.3.8"
  },
  "ignoreScripts": [
    "sharp",
    "unrs-resolver"
  ],
  "trustedDependencies": [
    "sharp",
    "unrs-resolver"
  ]
}
